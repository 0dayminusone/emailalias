root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{dart,java}]
indent_style = space
indent_size = 2

[*.{cpp,h,hpp}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{json,gradle}]
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false